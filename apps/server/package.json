{
  "name": "@midscene/server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts | pino-pretty",
    "build": "npm run build:staging",
    "build:prod": "NODE_ENV=prod npm run clean && npm run compile && npm run prepare-deployment:prod",
    "build:staging": "NODE_ENV=staging npm run clean && npm run compile && npm run prepare-deployment:staging",
    "clean": "rm -rf dist",
    "compile": "tsup",
    "prepare-deployment:prod": "npm run copy-files:prod && npm run create-package-json:prod && npm run create-deployment-docs && npm run create-start-script:prod",
    "prepare-deployment:staging": "npm run copy-files:staging && npm run create-package-json:staging && npm run create-deployment-docs && npm run create-start-script:staging",
    "copy-files:prod": "npm run create-env:prod && cp README.md dist/server/ && (cp .npmrc dist/server/ 2>/dev/null || true)",
    "copy-files:staging": "npm run create-env:staging && cp README.md dist/server/ && (cp .npmrc dist/server/ 2>/dev/null || true)",
    "create-env:prod": "node scripts/create-prod-env.js",
    "create-env:staging": "node scripts/create-staging-env.js",
    "create-package-json:prod": "node scripts/create-prod-package.js prod",
    "create-package-json:staging": "node scripts/create-staging-package.js",
    "create-deployment-docs": "node scripts/create-deployment-docs.js",
    "create-start-script:prod": "node scripts/create-start-script.js prod",
    "create-start-script:staging": "node scripts/create-staging-start-script.js",
    "create-deployment-package": "tar -czf midscene-server-deployment.tar.gz -C dist .",
    "start": "NODE_ENV=staging node dist/server/index.js | pino-pretty",
    "start:dev": "tsx src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:logger": "tsx src/test/logger-test.ts",
    "test:cls": "tsx src/test/simple-cls-test.ts",
    "test:windows": "tsx src/test/windows-service-mock-test.ts",
    "test:windows:mock": "tsx src/test/windows-service-mock-test.ts",
    "test:windows:quick": "tsx src/test/quick-windows-test.ts",
    "test:windows:full": "tsx src/test/windows-service-comprehensive-test.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "fix": "biome check --write .",
    "mastra:dev": "mastra dev"
  },
  "dependencies": {
    "@ai-sdk/openai": "2.0.23",
    "@ai-sdk/openai-compatible": "1.0.13",
    "@hono/node-server": "^1.19.0",
    "@hono/node-ws": "1.2.0",
    "@mastra/core": "0.15.2",
    "@mastra/libsql": "0.13.7",
    "@mastra/loggers": "0.10.9",
    "@mastra/mcp": "0.11.2",
    "@mastra/memory": "0.14.2",
    "@midscene/core": "0.30.1",
    "@midscene/mcp": "0.28.4",
    "@midscene/web": "^0.29.4",
    "@nut-tree/nut-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "hono": "^4.9.5",
    "pino": "9.9.4",
    "pino-pretty": "13.1.1",
    "tencentcloud-cls-sdk-js-web": "1.0.13",
    "yaml": "2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^20.19.11",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "happy-dom": "20.0.0",
    "tsup": "8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "3.2.4"
  }
}
